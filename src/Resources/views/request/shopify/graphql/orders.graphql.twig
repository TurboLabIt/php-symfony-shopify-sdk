{# https://shopify.dev/api/admin/graphql/reference/orders/order #}

{% block shopifyOrdersTemplate %}
{
  orders(first: {{ shopify_config.results_per_page }}, reverse:true, query:"
    {%- block shopifyOrdersQuery -%}
        {%- if shopifyOrdersQuery is defined -%}
            {{- shopifyOrdersQuery|raw -}}
        {%- endif -%}
    {%- endblock -%}") {
    edges {
      node {
        id
        email
        note
        phone
        name
        fulfillmentOrders(first:4) {
          edges{
            node {
              id
              status
              assignedLocation {
                name
              }
            }
          }
        }
        originalTotalPriceSet {
          shopMoney {
            amount
            currencyCode
          }
        }
        paymentGatewayNames
        createdAt
        updatedAt
        closedAt
        cancelledAt
        cancelReason
        fullyPaid
        discountCodes
        billingAddress {
          firstName
          lastName
          company
          address1
          address2
          city
          zip
          province
          provinceCode
          country
          countryCodeV2
          phone
        }
        shippingAddress {
          firstName
          lastName
          company
          address1
          address2
          city
          zip
          province
          provinceCode
          country
          countryCodeV2
          phone
        }
        customerAcceptsMarketing
        shippingLine {
          code
          originalPriceSet {
            shopMoney {
              amount
              currencyCode
            }
          }
          discountedPriceSet {
            shopMoney {
              amount
              currencyCode
            }
          }
          taxLines {
            title
            ratePercentage
            priceSet {
              shopMoney {
                amount
                currencyCode
              }
            }
          }
        }
        totalDiscountsSet {
          shopMoney {
            amount
            currencyCode
          }
        }
	customerJourneySummary {
          firstVisit {
            utmParameters {
              content
              medium
              source
              campaign
              term
            }
          }
          lastVisit {
            utmParameters {
              content
              medium
              source
              campaign
              term
            }
          }
        }
        lineItems(first:10) {
          edges {
            node {
	      {% block shopifyLineItemsExtra %}{% endblock %}
              name
              customAttributes {
                value
              }
              variant {
                barcode
              }
              discountedUnitPriceSet {
                shopMoney {
                  amount
                  currencyCode
                }
              }
              discountedTotalSet {
                shopMoney {
                  amount
                  currencyCode
                }
              }
              customAttributes {
                key
                value
              }
              id
              sku
              quantity
              variant {
                id
                displayName
                inventoryQuantity
                barcode
                price
              }
              product {
                id
                productType
                productCategory{
                  productTaxonomyNode {
                    id
                    fullName
                    name
                  }
                }
                status
                totalInventory
                tags
                vendor
                {% block shopifyOrdersProductsExtras %}{% endblock %}
              }
              quantity
              taxLines {
                title
                ratePercentage
                priceSet {
		  shopMoney {
                    amount
                    currencyCode
                  }
                }
              }
            }
          }
        }
        refunds {
          id
          createdAt
          updatedAt
          totalRefundedSet {
            shopMoney {
              amount
              currencyCode
            }
          }
          note
        }
        localizationExtensions(first:50, countryCodes:[IT]) {
          edges {
            node {
              key
              purpose
              title
              value
            }
          }
        }
      }
    }
  }
}
{% endblock %}
